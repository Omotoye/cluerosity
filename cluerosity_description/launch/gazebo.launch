<?xml version="1.0"?>
<launch>

    <arg name="x" default="0" />
    <arg name="y" default="0" />
    <arg name="z" default="0.115" />

    <arg name="model" default="$(find cluerosity_description)/urdf/cluerosity.xacro" />

    <!-- Load the URDF into the ROS Parameter Server -->
    <param name="robot_description" command="$(find xacro)/xacro --inorder $(arg model)" />

    <!-- Combine joint values -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

    <!-- Show in Rviz  -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find cluerosity_description)/config/gazebo.rviz" />

    <!-- send joint values -->
    <node name="joint_state_publisher_gui" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui" />

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="paused" value="false" />
    </include>

    <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" args="-urdf -model cluerosity -param robot_description -x $(arg x) -y $(arg y) -z $(arg z)" />

</launch>